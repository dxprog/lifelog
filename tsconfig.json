{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es2017",
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "typeRoots": [ "node_modules/@types" ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["server/*"],
      "@app/*": ["app/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
